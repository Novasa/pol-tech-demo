<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.facts.viewmodel.FactsViewModel" />

        <variable
            name="category"
            type="com.example.facts.model.Category" />
    </data>

    <androidx.cardview.widget.CardView
        style="?attr/facts_style_itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="?attr/facts_dimension_padding">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{category.name}"
                android:textAppearance="?attr/facts_textAppearance_header2"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/itemId"
                app:layout_constraintEnd_toStartOf="@id/itemDelete"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/category_id(category.id)}"
                android:textAppearance="?attr/facts_textAppearance_body"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemCategory"
                tools:text="ID: 0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/facts_dimension_spacing"
                android:textAppearance="?attr/facts_textAppearance_body"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/itemDelete"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/itemId"
                app:layout_constraintTop_toBottomOf="@id/itemCategory"
                binding:dateAndTime="@{category.created}"
                tools:text="Created: 2021-11-11" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/itemDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewModel.deleteCategory(category)}"
                android:src="@drawable/ic_delete"
                android:tint="?colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
