<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- region Base Theme -->

    <style name="Facts" />

    <style name="Facts.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="facts_dimension_spacing">8dp</item>
        <item name="facts_dimension_padding">12dp</item>
        <item name="facts_dimension_defaultCornerRadius">12dp</item>
        <item name="facts_textAppearance_body">@style/Facts.TextAppearance.Body</item>
        <item name="facts_textAppearance_header1">@style/Facts.TextAppearance.Header1</item>
        <item name="facts_textAppearance_header2">@style/Facts.TextAppearance.Header2</item>
        <item name="facts_style_itemCardView">@style/Facts.CardView</item>
        <item name="facts_style_buttonBordered">@style/Facts.Button.Bordered</item>
        <item name="facts_style_tabLayout">@style/Facts.TabLayout</item>
        <item name="facts_style_fab">@style/Facts.Fab</item>
    </style>

    <!-- endregion -->


    <!-- region Default Theme -->
    <!-- Can be overridden in separate resource folders, like values-night for dark theme -->

    <style name="Facts.Theme.Actual">
        <item name="colorPrimary">@color/politi_blue_light</item>
        <item name="colorPrimaryVariant">@color/politi_blue_dark</item>
        <item name="colorOnPrimary">@color/politi_black</item>
        <item name="colorSecondary">@color/politi_yellow</item>
        <item name="colorSecondaryVariant">@color/politi_yellow</item>
        <item name="colorOnSecondary">@color/politi_white</item>

        <item name="facts_color_accent">@color/politi_yellow</item>
        <item name="facts_color_background1">@color/politi_white</item>
        <item name="facts_color_background2">@color/politi_gray_light</item>
        <item name="facts_color_textPrimary">@color/politi_blue_dark</item>
        <item name="facts_color_textSecondary">@color/politi_blue_light</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- endregion -->

</resources>
